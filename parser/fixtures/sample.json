    "options": [
      {
        "position": 1,
        "label": {
          "en": "Married",
          "ny": "Inde"
        }
      },
      {
        "position": 2,
        "label": {
          "en": "Single",
          "ny": "Ayi"
        }
      },
      {
        "position": 3,
        "label": {
          "en": "Widowed",
          "ny": "Woferedwa"
        }
      },
      {
        "position": 4,
        "label": {
          "en": "Divorced",
          "ny": "Osudzulidwa"
        }
