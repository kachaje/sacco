{
  "initialScreen": "enterLanguage",
  "enterLanguage": {
    "type": "inputScreen",
    "text": "Language",
    "options": [
      {
        "position": 1,
        "label": {
          "all": "English"
        }
      },
      {
        "position": 2,
        "label": {
          "all": "Chichewa"
        }
      }
    ],
    "inputIdentifier": "language",
    "nextScreen": "enterFirstName"
  },
  "enterFirstName": {
    "type": "inputScreen",
    "text": {
      "en": "First Name",
      "ny": "Dzina Loyamba"
    },
    "inputIdentifier": "firstName",
    "nextScreen": "enterLastName"
  },
  "enterLastName": {
    "type": "inputScreen",
    "text": {
      "en": "Last Name",
      "ny": "Dzina La Abambo"
    },
    "inputIdentifier": "lastName",
    "nextScreen": "enterDateOfBirth"
  },
  "enterAskOtherName": {
    "type": "inputScreen",
    "text": {
      "en": "Other Name?",
      "ny": "Dzina Lina?"
    },
    "options": [
      {
        "position": 1,
        "label": {
          "en": "Yes",
          "ny": "Inde"
        },
        "nextScreen": "enterOtherName"
      },
      {
        "position": 2,
        "label": {
          "en": "No",
          "ny": "Ayi"
        }
      }
    ],
    "inputIdentifier": "askOtherName",
    "nextScreen": "enterGender"
  },
  "enterOtherName": {
    "type": "inputScreen",
    "text": {
      "en": "Other Name",
      "ny": "Dzina Lina"
    },
    "inputIdentifier": "otherName",
    "nextScreen": "enterDateOfBirth"
  },
  "enterDateOfBirth": {
    "type": "inputScreen",
    "text": {
      "en": "Date of Birth",
      "ny": "Tsiku Lobadwa"
